<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/bargraph"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></com.github.mikephil.charting.charts.BarChart>

    <TextView
        android:text="Last Week $25"
        android:id="@+id/textView"
        android:background="@android:color/holo_blue_light"
        android:textAppearance="@style/TextAppearence.TextInputLayout.White"
        android:textStyle="normal|bold"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="50dp"
        android:layout_width="200dp" />

    <TextView
        android:text="Daily Usage $19"
        android:layout_height="25dp"
        android:id="@+id/textView2"
        android:background="@android:color/holo_green_light"
        android:textAppearance="@style/TextAppearence.TextInputLayout.White"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center"
        android:layout_width="200dp" />

    <TextView
        android:text="Yesterday $21"
        android:layout_height="25dp"
        android:id="@+id/textView3"
        android:background="@android:color/holo_orange_light"
        android:textAppearance="@style/TextAppearence.TextInputLayout.White"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_above="@+id/bargraph"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="200dp" />


</RelativeLayout>